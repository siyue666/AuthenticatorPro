<resources>
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorDarkest</item>
        <item name="colorPrimaryDark">@color/colorDarkest</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackgroundFloating">@color/colorDark</item>

        <item name="primaryTextColor">@color/colorLighter</item>
        <item name="secondaryTextColor">@color/colorLight</item>

        <item name="android:fontFamily">sans-serif</item>

        <item name="android:windowBackground">@color/colorDarkest</item>
    </style>
</resources>
